---
const navItems = [
  { id: 'hero', label: 'Hero' },
  { id: 'hal', label: 'HAL' },
  { id: 'experience', label: 'Experience' },
  { id: 'skills', label: 'Skills' },
  { id: 'about', label: 'About' },
  { id: 'resume', label: 'Resume' },
  { id: 'contact', label: 'Contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-gray-900/95 backdrop-blur-sm border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center items-center h-16">
      <ul class="flex flex-wrap justify-center gap-4 md:gap-6 lg:gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={`#${item.id}`}
              class="text-gray-300 hover:text-purple-400 transition-colors duration-200 font-medium"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>
