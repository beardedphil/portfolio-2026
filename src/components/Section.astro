---
interface Props {
  id: string;
  title?: string;
  variant?: 'default' | 'alt';
}

const { id, title, variant = 'default' } = Astro.props;
const bgClass = variant === 'alt' ? 'bg-gray-800/50' : '';
---

<section
  id={id}
  class={`min-h-screen flex flex-col items-center justify-center py-20 px-4 scroll-mt-20 ${bgClass}`}
>
  {title && (
    <h2 class="text-4xl md:text-6xl font-bold mb-8 text-white">
      {title}
    </h2>
  )}
  <div class="container mx-auto max-w-4xl">
    <slot />
  </div>
</section>
