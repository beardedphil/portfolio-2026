---
interface Props {
  id: string;
  title?: string;
}

const { id, title } = Astro.props;
---

<section
  id={id}
  class="min-h-screen flex flex-col items-center justify-center py-20 px-4 scroll-mt-20"
>
  {title && (
    <h2 class="text-4xl md:text-5xl font-bold mb-8 text-purple-500">
      {title}
    </h2>
  )}
  <div class="container mx-auto max-w-4xl">
    <slot />
  </div>
</section>
