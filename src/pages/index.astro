---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Section from '../components/Section.astro';
---

<Layout title="Portfolio">
  <Navigation />
  
  <main class="pt-20">
    <Section id="hero">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
          Welcome to My Portfolio
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 mb-8">
          Software Developer & Creative Problem Solver
        </p>
        <a
          href="#contact"
          class="inline-block px-8 py-3 bg-purple-500 hover:bg-purple-600 text-white font-semibold rounded-lg transition-colors duration-200"
        >
          Get in Touch
        </a>
      </div>
    </Section>

    <Section id="hal" title="HAL">
      <div class="text-center">
        <p class="text-lg text-gray-300 leading-relaxed">
          HAL section content goes here. This is a placeholder for HAL-related information.
        </p>
      </div>
    </Section>

    <Section id="experience" title="Experience">
      <div class="space-y-6">
        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
          <h3 class="text-2xl font-semibold text-purple-500 mb-2">
            Senior Software Developer
          </h3>
          <p class="text-gray-400 mb-2">Company Name • 2020 - Present</p>
          <p class="text-gray-300">
            Experience details and accomplishments go here.
          </p>
        </div>
        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
          <h3 class="text-2xl font-semibold text-purple-500 mb-2">
            Software Developer
          </h3>
          <p class="text-gray-400 mb-2">Previous Company • 2018 - 2020</p>
          <p class="text-gray-300">
            Previous experience details go here.
          </p>
        </div>
      </div>
    </Section>

    <Section id="skills" title="Skills">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {['JavaScript', 'TypeScript', 'React', 'Astro', 'Node.js', 'Python', 'Git', 'Tailwind CSS'].map((skill) => (
          <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 text-center hover:border-purple-500 transition-colors duration-200">
            <span class="text-gray-300 font-medium">{skill}</span>
          </div>
        ))}
      </div>
    </Section>

    <Section id="about" title="About">
      <div class="text-center max-w-2xl mx-auto">
        <p class="text-lg text-gray-300 leading-relaxed mb-4">
          About section content goes here. This is where you can share information about yourself,
          your background, interests, and what drives you as a developer.
        </p>
        <p class="text-lg text-gray-300 leading-relaxed">
          Additional details about your journey, values, and what makes you unique.
        </p>
      </div>
    </Section>

    <Section id="resume" title="Resume">
      <div class="text-center">
        <p class="text-lg text-gray-300 mb-6">
          Download my resume or view it online.
        </p>
        <a
          href="#"
          class="inline-block px-8 py-3 bg-purple-500 hover:bg-purple-600 text-white font-semibold rounded-lg transition-colors duration-200"
        >
          Download Resume
        </a>
      </div>
    </Section>

    <Section id="contact" title="Contact">
      <div class="text-center max-w-md mx-auto">
        <p class="text-lg text-gray-300 mb-6">
          Get in touch with me. I'm always open to discussing new projects,
          creative ideas, or opportunities to be part of your visions.
        </p>
        <div class="space-y-4">
          <a
            href="mailto:your.email@example.com"
            class="block text-purple-500 hover:text-purple-400 transition-colors duration-200"
          >
            your.email@example.com
          </a>
          <div class="flex justify-center gap-4">
            <a
              href="#"
              class="text-gray-400 hover:text-purple-500 transition-colors duration-200"
            >
              LinkedIn
            </a>
            <a
              href="#"
              class="text-gray-400 hover:text-purple-500 transition-colors duration-200"
            >
              GitHub
            </a>
            <a
              href="#"
              class="text-gray-400 hover:text-purple-500 transition-colors duration-200"
            >
              Twitter
            </a>
          </div>
        </div>
      </div>
    </Section>
  </main>
</Layout>
