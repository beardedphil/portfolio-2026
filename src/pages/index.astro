---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Portfolio">
	<Navigation />

	<main>
		<!-- Hero Section -->
		<section id="hero" class="min-h-screen flex items-center justify-center pt-16 px-4 sm:px-6 lg:px-8 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
					Welcome to My Portfolio
				</h1>
				<p class="text-xl md:text-2xl text-gray-400 mb-8">
					Building amazing experiences, one project at a time
				</p>
				<a href="#contact" class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors duration-200">
					Get in Touch
				</a>
			</div>
		</section>

		<!-- HAL Section -->
		<section id="hal" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 bg-gray-800/50 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					HAL
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for HAL section
				</p>
			</div>
		</section>

		<!-- Experience Section -->
		<section id="experience" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					Experience
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for Experience section
				</p>
			</div>
		</section>

		<!-- Skills Section -->
		<section id="skills" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 bg-gray-800/50 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					Skills
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for Skills section
				</p>
			</div>
		</section>

		<!-- About Section -->
		<section id="about" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					About
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for About section
				</p>
			</div>
		</section>

		<!-- Resume Section -->
		<section id="resume" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 bg-gray-800/50 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					Resume
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for Resume section
				</p>
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 scroll-mt-16">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">
					Contact
				</h2>
				<p class="text-xl text-gray-400">
					Placeholder content for Contact section
				</p>
			</div>
		</section>
	</main>
</Layout>

<script>
	// Smooth scrolling for navigation links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script>
