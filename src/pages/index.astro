---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Section from '../components/Section.astro';
---

<Layout title="Portfolio">
	<Navigation />

	<main>
		<!-- Hero Section -->
		<Section id="hero">
			<div class="text-center">
				<h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
					Welcome to My Portfolio
				</h1>
				<p class="text-xl md:text-2xl text-gray-400 mb-8">
					Building amazing experiences, one project at a time
				</p>
				<a href="#contact" class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors duration-200">
					Get in Touch
				</a>
			</div>
		</Section>

		<!-- HAL Section -->
		<Section id="hal" title="HAL" variant="alt">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for HAL section
				</p>
			</div>
		</Section>

		<!-- Experience Section -->
		<Section id="experience" title="Experience">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for Experience section
				</p>
			</div>
		</Section>

		<!-- Skills Section -->
		<Section id="skills" title="Skills" variant="alt">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for Skills section
				</p>
			</div>
		</Section>

		<!-- About Section -->
		<Section id="about" title="About">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for About section
				</p>
			</div>
		</Section>

		<!-- Resume Section -->
		<Section id="resume" title="Resume" variant="alt">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for Resume section
				</p>
			</div>
		</Section>

		<!-- Contact Section -->
		<Section id="contact" title="Contact">
			<div class="text-center">
				<p class="text-xl text-gray-400">
					Placeholder content for Contact section
				</p>
			</div>
		</Section>
	</main>
</Layout>

<script>
	// Smooth scrolling for navigation links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script>
